<odoo>
    <data>


        <record id="logistics_types_form" model="ir.ui.view">
            <field name="name">logistics_types.form</field>
            <field name="model">logistics.shipment.transypes</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                    </header>
                    <sheet>

                        <group>
                            <field name="name"/>
                            <field name="is_transport"/>
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>


        <record id="shipment_form" model="ir.ui.view">
            <field name="name">logistics_shipment.form</field>
            <field name="model">logistics.shipment</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                    </header>
                    <sheet>

                        <group>

                            <group>
                                <field name="contract_id" required="1"/>
                                <field name="origin_ids" widget="many2many_tags" required="1"/>
                                <field name="origin_is_selected" invisible="1"/>
                                <field name="customer" required="1"/>     
                            </group>

                            <group>
                                <field name="vendor" attrs="{'invisible': [('multi_vendor', '=', True)]}"/>
                                <field name="multi_vendor"/>
                                <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                            </group>

                        </group>
                        
                        <group>
                            <button name="get_from_pos" type="object" string="Get From PO's" class="oe_highlight" attrs="{'invisible': [('origin_is_selected', '=', False)]}"/>
                        </group>




                        <notebook>
                            <page name='shipment' string='Shipment'>
                                <group>
                                    <field name="shipment_lines">
                                        <tree editable="top">
                                            <field name="product_id" width="200px"/>
                                            <field name="vendors" attrs="{'column_invisible': [('parent.multi_vendor', '=', False)]}" width="200px"/>
                                            <field name="qty" width="200px"/>
                                            <field name="unit_price" width="200px" invisible="1"/>
                                            <field name="amount_total" width="200px"/>
                                        </tree>
                                    </field>
                                </group>
                                <group>
                                    <group></group>
                                    <group>
                                        <field name="shipment_total" readonly="1"/>   
                                    </group>
                                </group>
                            </page>

                            <page name='purchase_order' string='Purchase Orders'>
                                <group>
                                    <field name="purchase_orders">
                                        <tree editable="top">
                                            <field name="purchase_orders_ids"/>
                                            <field name="type_id"/>
                                            <field name="from_date"/>
                                            <field name="to_date"/>
                                            <field name="amount"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>

                        </notebook>
                        


                        
                    </sheet>
                </form>
            </field>
        </record>





    </data>
</odoo>